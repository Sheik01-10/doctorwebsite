rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /appointments/{appointmentId} {

      // âœ… Anyone can CREATE appointment (patients)
      allow create: if true;

      // âœ… Anyone can READ queue (patients view queue)
      allow read: if true;

      // ğŸ” Only admin (logged in) can UPDATE / DELETE
      allow update, delete: if request.auth != null;
    }
  }
}
